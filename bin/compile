#!/bin/bash

CURDIR=$PWD
DIR="$( cd "$( dirname "$0" )" && pwd )"
echo "-----> Installing ngrok and runner"
cd $DIR; cp -R ../files/run_znc.sh $1/run_znc.sh
cd $DIR; cp -R ../files/ngrok $1/ngrok
mkdir -p /app
mkdir -p $2
if [ -f $2/znc-1.6.4-rc1 ]; then
  echo "-----> znc is already compiled"
  cd $2/znc-1.6.4-rc1; make install
  cp -R /app/znc/ $1/
else
  echo "-----> downloading and compile znc"
  cd $2; curl -O https://znc.in/releases/archive/znc-1.6.4-rc1.tar.gz
  cd $2; tar zxvf znc-1.6.4-rc1.tar.gz
  cd $2/znc-1.6.4-rc1; ./configure --prefix="/app/znc"
  cd $2/znc-1.6.4-rc1; make
  cd $2/znc-1.6.4-rc1; make install
  cp -R /app/znc/ $1/

fi

echo "-----> Relocating znc config to proper folder"
mkdir -p $1/.znc/configs
cp $1/znc.conf $1/.znc/configs/znc.conf
rm $1/znc.conf
echo "-----> Setting up Procfile"
cd $DIR; cp ../Procfile $1/Procfile
cd $CURDIR
